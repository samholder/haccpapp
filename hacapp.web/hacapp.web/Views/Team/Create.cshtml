@model Hacapp.Web.Models.Team.CreateTeamViewModel

@{
    ViewBag.Title = "New team";    
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Team", FormMethod.Post,
    new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <h4>Create a new team</h4>
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m=>m.TeamName, new {@class="col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m=>m.TeamName, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create"/>
        </div>
    </div>
}
